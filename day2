bmi:
# 1st input: enter height in meters e.g: 1.65
height = input()
# 2nd input: enter weight in kilograms e.g: 72
weight = input()
# ðŸš¨ Don't change the code above ðŸ‘†

height_float=float(height)
weight_int=int(weight)
bmi=weight_int/(height_float * height_float)
bmi_int=int(bmi)
print(bmi_int)

two digit addition:
two_digit=input("enter the number")
first_digit=int(two_digit[0])
second_digit=int(two_digit[1])
two_digit=first_digit + second_digit
two_digit_int=int(two_digit)
print(two_digit_int)




life left:
age=input()
year=90-int(age)
weeks=year*52
print(f"you have the {weeks} left.")


leaf year :


leaf_year=int(input("enter the year"))
if leaf_year % 4 == 0:
    if leaf_year % 100 == 0:
        if leaf_year %400 == 0:
            print("leaf year")
        else :
            print("not leaf year")
    else :
        print(" is a leaf_year")
else :
    print("not a leaf_year")

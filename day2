print("Welcome to the rollercoaster.")
height=int(input("enter ur height: "))
bill=0
if height >= 120 :
    print("you can ride th rollercoaster.")
    age=int(input("enter your age: "))
    if age <12:
        bill=5
        print(" you can pay : $5")
    elif age <=18 :
        bill=7
        print("you can pay: $7")
    elif age >=45 and age <=55 :
        bill=0
        print("you can take a free ride")
    else:
        bill=12
        print("you can pay : $12")
    add_photo=input("do you want photo? Y or N")
    if add_photo == "Y":
        if age <45:
            bill+=3
        else :
            print("free photo")
        
print(f"total bill :{bill}")


love calculator:



print("Welcome to the love calculator.")
name1=input("enter the your name:")
name2=input("enter the your loved once name:")
combine_name=name1+name2
lower_name=combine_name.lower()
t=lower_name.count("t")
r=lower_name.count("r")
u=lower_name.count("u")
e=lower_name.count("e")
first_digit=t+r+u+e

l=lower_name.count("t")
o=lower_name.count("t")
v=lower_name.count("t")
e=lower_name.count("t")
second_digit=l+o+v+e
score=int(str(first_digit)+str(second_digit))

print(f"your score is {score}.")
if score <50 :
    print(f"no love")


head and tails:

import random
random_integer=random.randint(0,1)
if random_integer==1:
    print("Heads")
else:
    print("Tails")


till payer today game:
import random
names=["kiran","kumar","chappiti"]
name=len(names)
pay=random.randint(0,name-1)
payer=names[pay]
print(f"{payer} is paying bill today")



leaf year :


leaf_year=int(input("enter the year"))
if leaf_year % 4 == 0:
    if leaf_year % 100 == 0:
        if leaf_year %400 == 0:
            print("leaf year")
        else :
            print("not leaf year")
    else :
        print(" is a leaf_year")
else :
    print("not a leaf_year")


rollercoaster to take photo total bill :
print("Welcome to the rollercoaster!")
height=float(input("enter the height of the child"))
bill=0
if height >=120:
  print("u can ride the rolllercoaster")
  age=int(input("enter ur age"))
  if age <12 :
    bill=5
    print("child ticket is 5$")
  elif age <=18 :
    bill=7
    print("child ticket is 7$")
  else:
    bill=12
    print("child ticket is 12$")
  photo=input("do you want photo Y or N.")
  if photo == "Y":
    bill+=3
  else:
    print("no photo")
  print(f"the total bill is {bill}$")
else :
  print("ur not allowed to the rollercoaster")


pizza order :
print("Welcome to the pizza?")
size=input("enter the size of the pizza? S, M, or L")
bill=0
if size == "S":
    bill=15
elif size =="M":
    bill=20
else :
    bill=25
    
add_pepperoni=input("Do you want pepperoni? Y or N")
if add_pepperoni == "Y":
    size=input("enter the size of the pizza? S, M, or L")
    if size =="S":
        bill+=2
    else:
        bill+=3
        
add_cheese=input("Do you want extra cheese? Y or N")
if add_pepperoni =="Y":
    bill+=1
    
print(f"the total bill is {bill}")

    
